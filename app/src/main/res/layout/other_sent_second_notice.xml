<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_gravity="start"
    android:gravity="start"
    android:id="@+id/other_send_second_linear"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/other_notice_second_card"
        android:visibility="gone"
        app:cardBackgroundColor="#F0F0F0"
        app:cardElevation="1dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/other_notice_second_date"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/text_color" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="start"
        android:gravity="start">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:background="@drawable/another_image_second2"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:textAppearanceSmall"
            android:visibility="gone"
            android:id="@+id/other_notice_second_name"
            android:paddingRight="15dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textColorLink="@color/colorPrimaryDark"
            android:id="@+id/other_notice_second_message"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/other_notice_second_time"
            android:layout_gravity="end"
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp" />

    </LinearLayout>

    </RelativeLayout>

</LinearLayout>