<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_gravity="end"
    android:gravity="end"
    android:id="@+id/self_send_second_linear"
    android:layout_marginTop="5dp"
    android:background="@drawable/chat_message_selected"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="#f0f0f0"
        app:cardElevation="1dp"
        android:visibility="gone"
        android:id="@+id/self_notice_second_card"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/self_notice_second_date"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingBottom="5dp"
        android:textColor="@color/text_color" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="end"
        android:gravity="end">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:background="@drawable/another_image2"
            android:layout_gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:visibility="gone"
                android:id="@+id/self_second_notice_name"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/self_send_second_chk_box"
                android:button="@null"
                android:background="@drawable/delete_chat"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/self_notice_second_message"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textColorLink="@android:color/white"
                android:textColor="@android:color/white" />


        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#E0E0E0"
                android:id="@+id/self_notice_second_time"
                android:layout_gravity="end"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>